@model IEnumerable<ManageHotel.Models.RoomType>
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Room Types";
    Layout = "_Layout";

    var currentHotel = ViewContext.HttpContext.Request.Query["hotelId"].ToString();
    var currentKeyword = ViewContext.HttpContext.Request.Query["keyword"].ToString();
}

<div class="container-fluid">
    <h1 class="h3 mb-3 text-gray-800">Room Types</h1>

    <div class="card shadow mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <form method="get" class="d-flex gap-2 align-items-center">
                <select name="hotelId" class="form-select" style="width:220px;" onchange="this.form.submit()">
                    <option value="">-- All Hotels --</option>
                    @foreach (var h in (SelectList)ViewBag.Hotels)
                    {
                        var sel = (currentHotel == h.Value) ? "selected=\"selected\"" : "";
                        @Html.Raw($"<option value=\"{h.Value}\" {sel}>{h.Text}</option>")
                    }
                </select>

                <input type="text" name="keyword" class="form-control" placeholder="Search Type Name..." style="width:300px;"
                       value="@currentKeyword" />

                <button class="btn btn-primary"><i class="fa fa-search"></i></button>
            </form>

            <a class="btn btn-success" href="@Url.Action("Create")"><i class="fa fa-plus"></i> Add Type</a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Type Name</th>
                            <th>Hotel</th>
                            <th>Room Count</th>
                            <th>iCal Link</th>
                            <th>Created At</th>
                            <th style="width:140px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr><td colspan="7" class="text-center text-muted">No room types found</td></tr>
                        }
                        else
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i++</td>
                                    <td>@item.TypeName</td>
                                    <td>@item.Hotel?.HotelName</td>
                                    <td>
                                        @{
                                            if (item.RoomCount.HasValue && item.RoomCount.Value > 0)
                                            {
                                                <span class="badge bg-success">@item.RoomCount.Value Rooms</span>
                                                ;
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">No Rooms</span>
                                                ;
                                            }
                                        }
                                    </td>
                                    <td>
                                        @{
                                            if (!string.IsNullOrWhiteSpace(item.IcalLink))
                                            {
                                                <a target="_blank" href="@item.IcalLink" class="badge bg-primary text-decoration-none">Linked</a>
                                                ;
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Not Linked</span>
                                                ;
                                            }
                                        }
                                    </td>
                                    <td>@(item.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                                    <td>
                                        <a class="btn btn-sm btn-info" href="@Url.Action("Edit", new { id = item.RoomTypeId })"><i class="fa fa-edit"></i></a>
                                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = item.RoomTypeId })"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
