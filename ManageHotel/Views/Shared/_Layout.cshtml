<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <!-- add SB Admin 2 CSS or custom styles here -->
    <style>
        body {
            font-family: "Nunito", sans-serif;
        }

        .sidebar {
            width: 220px;
        }

        .content {
            margin-left: 220px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <nav class="sidebar bg-dark text-white position-fixed vh-100 p-3">
            <div class="sidebar-brand mb-4">
                <h4>ManageHotel</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link text-white" href="/">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="/Hotel/Index">Hotel</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="/RoomType/Index">RoomType</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="/Room/Index">Rooms</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="/Reservation/Index">Reservation</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="/Auth/Login">Auth</a></li>
            </ul>
        </nav>

        <main class="content w-100">
            <nav class="navbar navbar-expand navbar-light bg-white mb-4 shadow-sm">
                <div class="container-fluid">
                    <span class="navbar-brand">Admin</span>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>

            <footer class="mt-4">
                <div class="text-center small">© @DateTime.Now.Year ManageHotel</div>
            </footer>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
