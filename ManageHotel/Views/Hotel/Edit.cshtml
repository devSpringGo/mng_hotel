@model ManageHotel.Models.Hotel

@{
    ViewData["Title"] = "Edit Hotel";
    Layout = "_Layout";
}

<div class="container-fluid">
    <h1 class="h3 mb-3">Edit Hotel</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="HotelId" />

                <div class="mb-3">
                    <label class="form-label">Hotel Name</label>
                    <input asp-for="HotelName" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Address</label>
                    <input asp-for="Address" class="form-control" />
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label class="form-check-label">Is Active</label>
                </div>

                <button class="btn btn-success">Save</button>
                <a class="btn btn-secondary" href="@Url.Action("Index")">Back</a>
            </form>
        </div>
    </div>
</div>
